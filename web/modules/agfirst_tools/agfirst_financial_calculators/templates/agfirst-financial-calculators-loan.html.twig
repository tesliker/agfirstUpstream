<form>
  <div class="form-group">
    <label for="loanAmount">{{"Loan Amount" | t}}</label>
    <input type="text" id="loanAmount" class="form-control user-input" value="{{ loan_calc_amount }}">
  </div>
  <div class="form-group">
    <label for="interestRate">{{"Interest Rate" | t}}</label>
    <input type="text" id="interestRate" class="form-control user-input" value="{{ loan_calc_interest }}">
  </div>
  <div class="form-group">
    <label for="years">{{"Years" | t}}</label>
    <input type="text" id="years" class="form-control user-input" value="{{ loan_calc_term }}">
  </div>
  <div class="form-group">
    <label for="paymentsPerYear">{{"Payments per year" | t}}</label>
    <input type="text" id="paymentsPerYear" class="form-control user-input" value="{{ loan_calc_frequency }}">
  </div>
  <div class="form-group">
    <div id="loanCalcResult" class="calcResult">{{"Your payment amount is" | t}} <span id="paymentAmount"></span></div>
    <div id="loanCalcMessage" class="form-error-message" style="display: none;">{{ "Please check your values and try again." | t }}</div>
  </div>

</form>
